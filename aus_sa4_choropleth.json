{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Active Cases (10 Oct 2020)",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/mzMarkZheng/FIT3179_Week9_HW/main/Dataset/sa4.json",
        "format": {
            "type": "topojson",
            "feature": "SA4_2021_AUST_GDA2020"
        }
    },
    "transform": [
        {
            "lookup": "properties.STE_NAME21",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mzMarkZheng/FIT3179_Week9_HW/main/Dataset/state_crashes.csv"
                },
                "key": "State",
                "fields": [
                    "Fatal Crashes",
                    "Population"
                ]
            }
        },
        {
            "calculate": "datum.Fatal Crashes/Population * 10000",
            "as": "Fatal Crashes per 10,000 population"
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "Fatal Crashes per 10,000 population",
            "type": "quantitative",
            "scale": {
                "type": "linear"
            }
        },
        "tooltip": [
            {
                "field": "properties.STE_NAME21",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "Fatal Crashes",
                "type": "quantitative"
            }
        ]
    }
}