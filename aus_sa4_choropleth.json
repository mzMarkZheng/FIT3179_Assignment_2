{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Fatal Crashes",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equirectangular"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/mzMarkZheng/FIT3179_Week9_HW/main/Dataset/LGA_STATES_GRATICULES.json",
        "format": {
            "type": "topojson",
            "feature": "SA4_2021_AUST_GDA2020"
        }
    },
    "transform": [
        {
            "lookup": "properties.LGA_NAME11",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/mzMarkZheng/FIT3179_Week9_HW/main/Dataset/ardd_fatal_crashes_lga.csv"
                },
                "key": "LGA",
                "fields": [
                    "Num_Fatalities"
                ]
            }
        },
        {
            "calculate": "datum.Num_Fatalities + 0.001",
            "as": "Fatal Crashes"
        }
    ],
    "mark": {
        "type": "geoshape",
        "stroke": "black"
    },
    "encoding": {
        "color": {
            "field": "Fatal Crashes",
            "type": "quantitative",
            "scale": {
                "type": "log"
            }
        },
        "tooltip": [
            {
                "field": "properties.LGA_NAME11",
                "type": "nominal",
                "title": "LGA"
            },
            {
                "field": "Fatal_Crashes",
                "type": "quantitative"
            }
        ]
    }
}